<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/black_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dialog_black_background"
        />

    <carbon.widget.LinearLayout
        android:id="@+id/main_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="18dp"
        style="@style/StandardDialogContainer_useWithCarbonView"
        >
        <com.compscieddy.workoutfh.ui.FontEditText
            android:id="@+id/habit_count_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="0"
            android:textColorHint="@color/wtb_20"
            android:textSize="40sp"
            android:inputType="numberDecimal"
            app:fontface="avenir_next_demibold"
            />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
            <carbon.widget.FrameLayout
                android:id="@+id/save_habit_record_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="12dp"
                android:background="@color/muted_green"
                android:padding="14dp"
                app:carbon_cornerRadius="99dp"
                >
                <com.compscieddy.workoutfh.ui.ColorImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_streamline_icon_check"
                    />
            </carbon.widget.FrameLayout>
        </FrameLayout>
    </carbon.widget.LinearLayout>

</FrameLayout>